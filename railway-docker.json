{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "Dockerfile.railway"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "liveness": {
        "enabled": true,
        "initialDelaySeconds": 30,
        "periodSeconds": 10
      }
    }
  }
}
